<% @navbar_visible = false %>


<div class="d-flex justify-content-center p-5" style="background: white; margin-top: 90px;">
<div class="login-container" style="width: 300px; background: white;">
<h2>Log in</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", class: "btn btn-danger" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>

<br>
<%= link_to 'Back', :back , class: "btn btn-primary" %>
<br>
</div>
</div>
